<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="toolbarStyle">@style/ToolbarStyle</item>-->
        <!--<item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>-->
    </style>

    <style name="DemoBtn" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DemoBtnTestEntrance" parent="DemoBtn">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="navigationIcon">@drawable/ic_top_back</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tool_bar_bg</item>
    </style>

    <!--必须要继承自Widget.AppCompat.Toolbar.Button.Navigation，否则Icon位置显示错误-->
    <!--<style name="ToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>-->

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <attr name="imgSrc" format="string" />

</resources>
