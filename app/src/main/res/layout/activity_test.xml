<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/test_goto_login"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_goto_login" />

        <Button
            android:id="@+id/test_goto_tab"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_goto_tab" />

        <Button
            android:id="@+id/test_goto_fab"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_goto_fab" />

        <Button
            android:id="@+id/test_goto_collapse_tool_bar"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_goto_collapse_app_bar" />

        <Button
            android:id="@+id/test_swipe_dismiss"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_swipe_dismiss" />

        <Button
            android:id="@+id/test_swipe_delete"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_swipe_delete" />

        <Button
            android:id="@+id/test_constraint_activity"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="constraint_activity" />

        <Button
            android:id="@+id/test_path"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_path" />

        <Button
            android:id="@+id/test_navigation_view"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="navigation_view" />

        <Button
            android:id="@+id/test_web_video"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="web_video" />

        <Button
            android:id="@+id/test_offset"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_offset" />

    </LinearLayout>

</ScrollView>