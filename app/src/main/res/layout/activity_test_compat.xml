<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/register_broadcast"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register_broadcast" />

        <Button
            android:id="@+id/register_broadcast_with_permission"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register_broadcast_with_permission" />

        <Button
            android:id="@+id/register_broadcast_exported_with_permission"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register_broadcast_exported_with_permission" />

        <Button
            android:id="@+id/send_broadcast"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send_broadcast" />

        <Button
            android:id="@+id/send_broadcast_with_pkg"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send_broadcast_with_pkg" />

        <Button
            android:id="@+id/send_broadcast_with_permission"
            style="@style/DemoBtnTestEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send_broadcast_with_permission" />

    </LinearLayout>

</ScrollView>